{
  "urn": "urn:mediator:fhir-forwarder-immunization",
  "version": "1.0.0",
  "name": "FHIR Event Forwarder immunization Mediator",
  "description": "Reenvía recursos FHIR desde OpenMRS proxy a un nodo nacional vía OpenHIM",
  "defaultChannelConfig": [
    {
      "name": "FHIR Forwarder Event Channel",
      "urlPattern": "^/forwarderimmunization/_event$",
      "routes": [
        {
          "name": "FHIR Forwarder Event Route",
          "host": "10.68.174.209",
          "path": "/forwarderimmunization/_event",
          "port": "8009",
          "primary": true,
          "type": "http"
        }
      ],
      "allow": ["admin"],
      "methods": ["POST"],
      "type": "http"
    },
    {
      "name": "FHIR Forwarder Health Channel",
      "urlPattern": "^/forwarderimmunization/_health$",
      "routes": [
        {
          "name": "FHIR Forwarder Health Route",
          "host": "10.68.174.209",
          "path": "/forwarderimmunization/_health",
          "port": "8009",
          "primary": true,
          "type": "http"
        }
      ],
      "allow": ["admin"],
      "methods": ["GET"],
      "type": "http"
    }
  ],
  "endpoints": [
    { "name": "event-endpoint",  "path": "/forwarderimmunization/_event",  "method": "post" },
    { "name": "health-endpoint", "path": "/forwarderimmunization/_health", "method": "get" }
  ],
  "heartbeatPath": "/forwarderimmunization/_health",
  "heartbeatInterval": 30000
}
