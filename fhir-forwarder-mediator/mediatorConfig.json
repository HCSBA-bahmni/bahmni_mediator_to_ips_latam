{
  "urn": "urn:mediator:fhir-forwarder",
  "version": "1.0.0",
  "name": "FHIR Event Forwarder Mediator",
  "description": "Reenvía recursos FHIR desde OpenMRS proxy a un nodo nacional vía OpenHIM",
  "defaultChannelConfig": [
    {
      "name": "FHIR Forwarder Channel",
      "urlPattern": "^/event$",
      "routes": [
        {
          "name": "FHIR Forwarder Route",
          "host": "0.0.0.0",
          "path": "/",
          "port": "8003",
          "primary": true,
          "type": "http"
        }
      ],
      "allow": ["admin"],
      "methods": ["POST"],
      "type": "http"
    }
  ],
  "endpoints": [
    {
      "name": "event-endpoint",
      "path": "/event",
      "method": "post"
    },
    {
      "name": "health-endpoint",
      "path": "/_health",
      "method": "get"
    }
  ],
  "heartbeatPath": "/_health",
  "heartbeatInterval": 30000
}
