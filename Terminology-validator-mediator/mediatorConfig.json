{
  "urn": "urn:mediator:terminology-proxy",
  "version": "1.0.0",
  "name": "FHIR Terminology Proxy Mediator",
  "description": "Proxy para CodeSystem, ValueSet, ConceptMap y operaciones terminol√≥gicas",
  "defaultChannelConfig": [
    {
      "name": "Terminology Proxy Channel",
      "urlPattern": "^/termino/fhir/.*$",
      "routes": [
        {
          "name": "Terminology Proxy Route",
          "host": "10.68.174.209",
          "port": "8010",
          "path": "/termino/fhir",
          "primary": true,
          "type": "http",
          "passThroughHeaders": ["Authorization", "Accept", "Content-Type"]
        }
      ],
      "allow": ["admin"],
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "type": "http"
    },
    {
      "name": "Terminology Validate Channel",
      "urlPattern": "^/termino/_validate$",
      "routes": [
        {
          "name": "Terminology Validate Route",
          "host": "10.68.174.209",
          "port": "8010",
          "path": "/termino/_validate",
          "primary": true,
          "type": "http",
          "passThroughHeaders": []
        }
      ],
      "allow": ["admin"],
      "methods": ["POST"],
      "type": "http"
    },
    {
      "name": "Terminology Health Channel",
      "urlPattern": "^/termino/_health$",
      "routes": [
        {
          "name": "Terminology Health Route",
          "host": "10.68.174.209",
          "port": "8010",
          "path": "/termino/_health",
          "primary": true,
          "type": "http",
          "passThroughHeaders": []
        }
      ],
      "allow": ["admin"],
      "methods": ["GET"],
      "type": "http"
    }
  ],
  "endpoints": [
    { "name": "proxy",   "path": "/termino/fhir", "method": "any" },
    { "name": "validate","path": "/termino/_validate", "method": "post" },
    { "name": "health",  "path": "/termino/_health", "method": "get" }
  ],
  "heartbeatPath": "/termino/_health",
  "heartbeatInterval": 30000
}
