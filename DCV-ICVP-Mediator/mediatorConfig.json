{
  "urn": "urn:mediator:ICVP-generator",
  "version": "1.0.0",
  "name": "ICVP Generator Mediator",
  "description": "Emite ICVP (HC1) desde un Bundle FHIR (IPS) usando el servicio v2/vshcIssuance",
  "defaultChannelConfig": [
    {
      "name": "ICVP Generate Channel",
      "urlPattern": "^/icvp/_generate$",
      "routes": [
        {
          "name": "VHL Generate Route",
          "host": "10.68.174.209",
          "port": "8012",
          "path": "/icvp/_generate",
          "primary": true,
          "type": "http",
          "passThroughHeaders": [
            "Accept",
            "Content-Type",
            "Authorization"
          ]
        }
      ],
      "allow": [
        "admin"
      ],
      "methods": [
        "POST"
      ],
      "type": "http"
    },
    {
      "name": "ICVP Validate Channel",
      "urlPattern": "^/icvp/_validate$",
      "routes": [
        {
          "name": "VHL Validate Route",
          "host": "10.68.174.209",
          "port": "8012",
          "path": "/icvp/_validate",
          "primary": true,
          "type": "http",
          "passThroughHeaders": [
            "Accept",
            "Content-Type",
            "Authorization"
          ]
        }
      ],
      "allow": [
        "admin"
      ],
      "methods": [
        "POST"
      ],
      "type": "http"
    },
    {
      "name": "VHL Resolve Channel",
      "urlPattern": "^/icvp/_resolve$",
      "routes": [
        {
          "name": "VHL Resolve Route",
          "host": "10.68.174.209",
          "port": "8012",
          "path": "/icvp/_resolve",
          "primary": true,
          "type": "http",
          "passThroughHeaders": [
            "Accept",
            "Content-Type",
            "Authorization"
          ]
        }
      ],
      "allow": [
        "admin"
      ],
      "methods": [
        "POST"
      ],
      "type": "http"
    },
    {
      "name": "VHL Health Channel",
      "urlPattern": "^/icvp/_health$",
      "routes": [
        {
          "name": "VHL Health Route",
          "host": "10.68.174.209",
          "port": "8012",
          "path": "/icvp/_health",
          "primary": true,
          "type": "http",
          "passThroughHeaders": []
        }
      ],
      "allow": [
        "admin"
      ],
      "methods": [
        "GET"
      ],
      "type": "http"
    }
  ],
  "endpoints": [
    {
      "name": "vhl-issue-endpoint",
      "path": "/icvp/_generate",
      "method": "post"
    },
    {
      "name": "vhl-validate-endpoint",
      "path": "/icvp/_validate",
      "method": "post"
    },
    {
      "name": "vhl-resolve-endpoint",
      "path": "/icvp/_resolve",
      "method": "post"
    },
    {
      "name": "vhl-health-endpoint",
      "path": "/icvp/_health",
      "method": "get"
    }
  ],
  "heartbeatPath": "/icvp/_health",
  "heartbeatInterval": 30000
}
