{
  "urn": "urn:mediator:fhir-proxy",
  "version": "1.0.0",
  "name": "OpenMRS FHIR Proxy Mediator",
  "description": "Proxy universal de la API FHIR de OpenMRS v√≠a OpenHIM",
  "defaultChannelConfig": [
    {
      "name": "FHIR Proxy Channel",
      "urlPattern": "^/fhir/.*$",
      "routes": [
        {
          "name": "FHIR Proxy Route",
          "host": "0.0.0.0",
          "path": "/",
          "port": "7000",
          "primary": true,
          "type": "http"
        }
      ],
      "allow": ["admin"],
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE"],
      "type": "http"
    },
    {
      "name": "FHIR Proxy Health Channel",
      "urlPattern": "^/_health$",
      "routes": [
        {
          "name": "FHIR Proxy Health Route",
          "host": "0.0.0.0",
          "path": "/",
          "port": "7000",
          "primary": true,
          "type": "http"
        }
      ],
      "allow": ["admin"],
      "methods": ["GET"],
      "type": "http"
    }
  ],
  "endpoints": [
    {
      "name": "fhir-proxy-endpoint",
      "path": "/fhir/*",
      "method": "*"
    },
    {
      "name": "health-endpoint",
      "path": "/_health",
      "method": "get"
    }
  ],
  "heartbeatPath": "/_health",
  "heartbeatInterval": 30000
}
