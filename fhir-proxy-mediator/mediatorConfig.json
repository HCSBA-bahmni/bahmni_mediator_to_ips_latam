{
  "urn": "urn:mediator:fhir-proxy",
  "version": "1.0.0",
  "name": "OpenMRS FHIR Proxy Mediator",
  "description": "Proxy universal de la API FHIR de OpenMRS v√≠a OpenHIM",
  "defaultChannelConfig": [
    {
      "name": "FHIR Proxy Channel",
      "urlPattern": "^/proxy/_fhir/.*$",
      "routes": [
        {
          "name": "FHIR Proxy Route",
          "host": "10.68.174.209",
          "path": "", 
          "port": "7000",
          "primary": true,
          "type": "http",
          "transform": {
            "path": "s|^/proxy/_fhir(/.*)$|/fhir$1|"
          }
        }
      ],
      "allow": ["admin"],
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE"],
      "type": "http"
    },
    {
      "name": "FHIR Proxy Health Channel",
      "urlPattern": "^/proxy/_health$",
      "routes": [
        {
          "name": "FHIR Proxy Health Route",
          "host": "10.68.174.209",
          "path": "/proxy/_health",
          "port": "7000",
          "primary": true,
          "type": "http"
        }
      ],
      "allow": ["admin"],
      "methods": ["GET"],
      "type": "http"
    }
  ],
  "endpoints": [
    {
      "name": "fhir-proxy-endpoint",
      "path": "/proxy/_fhir/*",
      "method": "*"
    },
    {
      "name": "health-endpoint",
      "path": "/proxy/_health",
      "method": "get"
    }
  ],
  "heartbeatPath": "/proxy/_health",
  "heartbeatInterval": 30000
}
